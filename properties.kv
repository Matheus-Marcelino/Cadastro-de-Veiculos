MDScreenManager:
    id: screen_manager

    MDScreen: # primeira tela que gera o pdf com as informações
        name: "cadastro"
        FloatLayout:

            MDIconButton:
                pos_hint:{'center_x': 0.5, 'center_y': 0.92}
                icon_size: 50
                icon: 'card-account-details'
                on_release: screen_manager.current = "qrcode"

            MDTextField:
                id:PG
                hint_text: "Posto e Graduação"
                on_focus: if self.focus: app.menu_pg.open()
                size_hint_x: 0.77
                pos_hint:{'center_x': 0.5, 'center_y': 0.79}
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.69}
                id: nomeCompleto
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Nome completo'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.59}
                id: nomeGuerra
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Nome de Guerra'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.49}
                id: marca
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Marca e Modelo'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.39}
                id: placa
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Placa'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.29}
                id: cor
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Cor'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.19}
                id: SU
                size_hint_x: 0.77
                on_focus: if self.focus: app.menu_su.open()
                hint_text: 'Sub Unidade'
                icon_right: 'pencil'
                write_tab: False

            MDRectangleFlatButton:
                pos_hint:{'center_x': 0.5, 'center_y': 0.09}
                text: 'Criar PDF com informações '
                text_color: 'white'
                md_bg_color: '#2096f2'
                size_hint_x: .7
                on_press: app.creat_pdf()

    MDScreen: # segunda tela que gera o cartão com o qrcode
        name: "qrcode"

        FloatLayout:
            MDIconButton:
                pos_hint:{'center_x': 0.5, 'center_y': 0.92}
                icon_size: 70
                icon: 'qrcode'
                on_release: screen_manager.current = "cadastro"

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.65}
                id: nomeArquivo
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Nome do arquivo'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.55}
                on_focus: if self.focus: app.menu_veiculo.open()
                id: veiculo
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Veiculo'
                icon_right: 'pencil'
                write_tab: False

            MDTextField:
                pos_hint:{'center_x': 0.5, 'center_y': 0.45}
                id: textQr
                size_hint_x: 0.77
                mode: 'line'
                hint_text: 'Digite o link'
                icon_right: 'pencil'
                write_tab: False
            
            MDRectangleFlatButton:
                pos_hint:{'center_x': 0.5, 'center_y': 0.3}
                text: 'Gerar cartão'
                text_color: 'white'
                md_bg_color: '#2096f2'
                size_hint_x: .7
                on_press: app.generate_card()

    MDScreen: # Tela de copyright
        name: "copyright"
        MDLabel:
            text: "© 2025 Matheus Marcelino Lopes\nTodos os direitos reservados.\n\nProjeto: Sistema Militar Gerador de Cartões de Veículos\nGitHub: https://github.com/Matheus-Marcelino/Cadastro-de-Veiculos.git\n\nEste software é protegido pela Lei de Software Brasileira (Lei nº 9.609/1998).\nÉ proibida a cópia, redistribuição ou uso comercial sem autorização expressa do autor.\nO uso não autorizado para fins comerciais constitui violação de direitos autorais e está sujeito a penalidades legais."
            halign: "center"
            font_style: "H6"
